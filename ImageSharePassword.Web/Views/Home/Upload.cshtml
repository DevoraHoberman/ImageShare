@model UploadViewModel
<div class="container">
    <main role="main" class="pb-3">

        <div class="row">
            <div class="col-md-8 offset-md-2 jumbotron">
                <h3>
                    Thank you for uploading your image,
                    here's the link to share with your friends:
                    
                    <br /><br />
                    <a href="https://localhost:44342/home/enterpassword?id=@Model.Id">
                        Click Here To See Image
                    </a>
                    <br /><br />

                    Make sure to give them the password of "@Model.Password"
                </h3>
            </div>
        </div>
    </main>
</div>